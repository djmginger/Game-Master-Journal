            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#6b6b6b" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
